<section id="todos">
  <header>
    <h2>Editing "<%= @list[:name] %>"</h2>
      <ul>
        <li>
          <form action="/lists/<%= @list[:id] %>/delete" method="post" class="delete">
            <button type="submit">Delete</button>
          </form>
        </li>
      </ul>
  </header>
</section>

<form action="/lists/<%= @list[:id] %>/edit" method="post">
  <dl>
    <dt>
      <label for="list_name">Edit name of the list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= @list[:id] %>">Cancel</a>
  </fieldset>
</form>
